<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="binding" type="com.snkz.databinding.Profile"/>
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imagebutton_main_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/main_button_back" />

            <ImageButton
                android:id="@+id/image_btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="250dp"
                android:src="@drawable/menu" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="My Profile"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_main_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatar"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textview_main_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="@{binding.name}"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textview_main_school"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:text="@{binding.company}"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textview_main_country"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:text="@{binding.address}"
            android:textColor="#000000"/>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_main_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btn_shownumber,linearlayout_main_information"
            />
        <Button
            android:id="@+id/button_main_shownumber"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Show information "
            android:textSize="10dp"
            android:textColor="#000000"
            android:backgroundTint="#B4F468"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Photos"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Followers"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Follows"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_main_information"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_main_numberofphotos"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@{``+binding.numberPics}"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_main_numberoffollowers"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@{``+binding.numberFollowrer}"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_main_numberoffollows"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@{``+binding.numberPics}"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#030304"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:src="@drawable/main_image_que" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/main_image_nmh" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/main_image_cheems" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>