<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="get_user_information"
            type="com.snkz.fragmentlifecycle.Information" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentA">

        <LinearLayout
            android:id="@+id/linearlayout_fragA_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/edittext_fragA_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#AEFF59"
                android:hint="Enter your name"
                android:textColor="#000000"
                android:textColorHint="#4A4A4A" />

            <EditText
                android:id="@+id/edittext_fragA_birthday"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="#AEFF59"
                android:hint="Enter your age"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#4A4A4A" />

            <EditText
                android:id="@+id/edittext_fragA_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="#AEFF59"
                android:hint="Enter your address"
                android:textColor="#000000"
                android:textColorHint="#4A4A4A" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_fragA_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="#51C0F6"
                android:text="submit" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>